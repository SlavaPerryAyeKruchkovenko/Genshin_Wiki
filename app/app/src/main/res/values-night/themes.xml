<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Genshin_Wiki" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorPrimaryContainer">@color/blue_500</item>
        <item name="colorOnPrimary">@color/blue_300</item>
        <item name="colorOnPrimaryContainer">@color/blue_200</item>
        <item name="colorPrimaryFixed">@color/white</item>
        <item name="colorOnPrimarySurface">@color/gray_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryFixed">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Surface colors -->
        <item name="colorOnSurface">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.SplashScreen.Genshin" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Genshin_Wiki</item>
    </style>
</resources>