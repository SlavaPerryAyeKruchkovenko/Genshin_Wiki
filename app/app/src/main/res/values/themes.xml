<resources>
    <!-- Base application theme. -->
    <style name="Theme.Genshin_Wiki" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryContainer">@color/gray_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryFixed">@color/black</item>
        <item name="colorOnPrimarySurface">@color/blue_300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorOnSecondaryFixed">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Surface colors -->
        <item name="colorOnSurface">@color/gray_200</item>
        <item name="colorOnSurfaceVariant">@color/gray_200</item>
        <!-- Customize your theme here. -->
        <item name="colorPyro">@color/pyro_element</item>
        <item name="colorDendro">@color/dendro_element</item>
        <item name="colorGeo">@color/geo_element</item>
        <item name="colorHydro">@color/hydro_element</item>
        <item name="colorElectro">@color/electro_element</item>
        <item name="colorAnemo">@color/anemo_element</item>
        <item name="colorCryo">@color/cryo_element</item>

    </style>
    <style name="Theme.SplashScreen.Genshin" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Genshin_Wiki</item>
    </style>
</resources>