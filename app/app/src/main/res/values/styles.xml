<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material3.SearchBar.person" parent="Widget.Material3.SearchBar">
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchBar.MyTitle</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="tintNavigationIcon">false</item>
    </style>

    <style name="Widget.Material3.AppBarLayout.Default" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Material3.SearchBar.MyTitle" parent="TextAppearance.Material3.SearchBar">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>
    <style name="BigText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">Inter</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>
    <style name="ResourceText" parent="BigText">
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="DangerTitle" parent="ResourceText">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>
    <style name="DefaultText" parent="ResourceText">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="PortraitDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PortraitDescriptionBold" parent="PortraitDescription">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PortraitDescription.Likeable" parent="PortraitDescription">
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
    </style>

    <style name="PortraitDescriptionBold.Likeable" parent="PortraitDescriptionBold">
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
    </style>

    <style name="PortraitDescriptionBold.Likeable.Large" parent="PortraitDescriptionBold.Likeable">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="PortraitTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResetBtn" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorOnPrimarySurface</item>
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondaryFixed</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="ClearBtn" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorOnPrimarySurface</item>
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondaryFixed</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.NavBar" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:background">?attr/colorPrimaryContainer</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="elevation">3dp</item>
        <item name="itemIconSize">36dp</item>
        <item name="itemRippleColor">@color/nav_bar_ripple_color</item>
        <item name="itemIconTint">@color/nav_bar_items_color</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">?attr/colorSecondaryVariant</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSecondary</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">70dp</item>
        <item name="android:height">60dp</item>
        <item name="android:color">?attr/colorOnPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Sys.Shape.Corner.LowCorner</item>
    </style>
    <style name="ShapeAppearance.M3.Sys.Shape.Corner.LowCorner" parent="">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">@dimen/profile_radius</item>
    </style>
</resources>